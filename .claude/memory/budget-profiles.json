{
  "version": "1.0.0",
  "description": "Memory budget profiles for agent-specific token allocation and optimization",
  "last_updated": "2025-10-14",

  "profiles": {
    "specialist-narrow": {
      "description": "Single-tool specialists with deep, narrow expertise",
      "base_budget": 20000,
      "max_budget": 50000,
      "scope_weights": {
        "global": 0.2,
        "agent_recent": 0.3,
        "agent_patterns": 0.5
      },
      "examples": ["snowflake-expert", "dbt-expert", "tableau-expert"]
    },

    "specialist-broad": {
      "description": "Cross-tool specialists with broader integration expertise",
      "base_budget": 35000,
      "max_budget": 75000,
      "scope_weights": {
        "global": 0.25,
        "agent_recent": 0.25,
        "agent_patterns": 0.5
      },
      "examples": ["aws-expert", "data-quality-specialist", "cost-optimization-specialist"]
    },

    "role-coordinator": {
      "description": "Role agents coordinating multiple specialists",
      "base_budget": 50000,
      "max_budget": 100000,
      "scope_weights": {
        "global": 0.3,
        "agent_recent": 0.2,
        "agent_patterns": 0.5
      },
      "examples": ["analytics-engineer-role", "data-engineer-role", "bi-developer-role"]
    },

    "role-architect": {
      "description": "Strategic architecture and research roles",
      "base_budget": 75000,
      "max_budget": 150000,
      "scope_weights": {
        "global": 0.35,
        "agent_recent": 0.15,
        "agent_patterns": 0.5
      },
      "examples": ["data-architect-role", "research-role"]
    }
  },

  "agent_assignments": {
    "specialists/snowflake-expert": "specialist-narrow",
    "specialists/dbt-expert": "specialist-narrow",
    "specialists/tableau-expert": "specialist-narrow",
    "specialists/prefect-expert": "specialist-narrow",
    "specialists/orchestra-expert": "specialist-narrow",
    "specialists/dlthub-expert": "specialist-narrow",
    "specialists/streamlit-expert": "specialist-narrow",
    "specialists/react-expert": "specialist-narrow",
    "specialists/github-sleuth-expert": "specialist-narrow",
    "specialists/documentation-expert": "specialist-narrow",
    "specialists/business-context": "specialist-narrow",
    "specialists/ui-ux-expert": "specialist-narrow",
    "specialists/project-delivery-expert": "specialist-narrow",

    "specialists/aws-expert": "specialist-broad",
    "specialists/data-quality-specialist": "specialist-broad",
    "specialists/cost-optimization-specialist": "specialist-broad",

    "roles/analytics-engineer-role": "role-coordinator",
    "roles/data-engineer-role": "role-coordinator",
    "roles/bi-developer-role": "role-coordinator",
    "roles/ui-ux-developer-role": "role-coordinator",
    "roles/qa-engineer-role": "role-coordinator",
    "roles/business-analyst-role": "role-coordinator",
    "roles/project-manager-role": "role-coordinator",

    "roles/data-architect-role": "role-architect",
    "roles/research-role": "role-architect"
  },

  "complexity_multipliers": {
    "simple": {
      "multiplier": 0.5,
      "description": "Single query, single tool, specific question",
      "examples": ["List tables", "Get query status", "Show configuration"]
    },
    "medium": {
      "multiplier": 1.0,
      "description": "Multiple steps, single system, standard analysis",
      "examples": ["Analyze query performance", "Review model dependencies", "Investigate data issue"]
    },
    "complex": {
      "multiplier": 1.5,
      "description": "Multi-step workflow, multiple tools, deep analysis",
      "examples": ["Optimize warehouse costs", "Troubleshoot pipeline failure", "Comprehensive audit"]
    },
    "multi-system": {
      "multiplier": 2.0,
      "description": "Cross-system coordination, multiple agents, architectural decisions",
      "examples": ["End-to-end data flow analysis", "Multi-tool integration", "System architecture design"]
    }
  },

  "alert_thresholds": {
    "info": 0.75,
    "warning": 0.90,
    "critical": 1.0
  },

  "tuning_parameters": {
    "exceedance_threshold_for_upgrade": 0.2,
    "underutilization_threshold_for_downgrade": 0.5,
    "minimum_samples_for_recommendation": 10,
    "recommendation_confidence_threshold": 0.7
  }
}
